generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  firstName String
  lastName  String
  password  String
  roleId    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrdersAuditTrail {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  username   String
  userId     String
  action     String
  actionTime DateTime @default(now())
  orderId    String
  storeId    String
}

model MilkRunAuditTrail {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  username     String
  userId       String
  action       String
  actionTime   DateTime @default(now())
  orderId      String
  storeId      String
  agentId      String
  agentName    String
  deliveryDate String
}
model Log {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  type       String
  message    String
  context    Json?
  dataBefore Json?
  dataAfter  Json?
  timestamp  DateTime @default(now())

  @@map("logs")
}

