model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  firstName String
  lastName  String
  password  String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model AuditLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  userid    String
  action    String
  actionTime DateTime @default(now())
  orderid   String
  
}
