generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  username   String
  email      String?
  password   String
  role       String
  warehouses String[]
}

model Role {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  permissions String[]
}
