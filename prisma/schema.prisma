generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  permissions String[]
}

model Warehouse {
  id   String @id @map("_id") @db.ObjectId
  name String
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username    String   @unique
  email       String?
  firstName   String
  lastName    String
  password    String
  status      String
  warehouseId String
  roleId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
